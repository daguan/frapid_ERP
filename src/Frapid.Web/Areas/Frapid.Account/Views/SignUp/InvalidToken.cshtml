@using Frapid.i18n

@{
    ViewBag.Title = "Invalid Confirmation Code";
    Layout = ViewBag.LayoutPath + ViewBag.Layout;
}
@if (CultureManager.IsRtl())
{
    <link rel="Stylesheet" href="@Href("~/bundles/master-page-rtl.css")" />
}
else
{
    <link rel="Stylesheet" href="@Href("~/bundles/master-page.css")" />
}

<div class="ui attached padded signup left aligned segment">
    <div class="ui container">
        <div class="ui header">Invalid Confirmation Code</div>
        <div class="ui divider"></div>
        <p>
            The supplied confirmation token is either invalid or expired.
        </p>
        <a href="/" class="ui small padded purple button">Return Home</a>
    </div>
</div>
