<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>MixERP - Free Cloud Based ERP Solution</title>
    <!--[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <!--[if lte IE 7]>
        <script src="js/IE8.js" type="text/javascript"></script><![endif]-->
    <!--[if lt IE 7]>

        <link rel="stylesheet" type="text/css" media="all" href="css/ie6.css"/><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="description" content="@ViewBag.Description" />
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/reset.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/grid.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/segment.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/container.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/header.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/menu.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/list.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/icon.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/button.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/divider.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/label.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/message.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/sidebar.min.css" type="text/css"/>
    <link rel="stylesheet" href="/Scripts/semantic-ui/components/form.min.css" type="text/css"/>
    <link rel="stylesheet" href="/my/template/contents/stylesheets/mixerp.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
</head>
<body>
@{
    string sidebar = ViewBag.LayoutPath + "Sidebar.cshtml";
    string footer = ViewBag.LayoutPath + "Footer.cshtml";
    string cookieNotice = ViewBag.LayoutPath + "CookieNotice.cshtml";
}

@Html.Partial(sidebar)

<div class="pusher">
<nav class="ui attached inverted fading indigo borderless segment">
    <div class="ui container">
        <div class="ui stackable fitted grid">
            <div class="twelve wide column">
                <a class="brand" href="/">
                    <img class="logo" src="/my/template/contents/images/logo-inverted.png"/>
                </a>
            </div>
            <div class="four wide right aligned column">
                <div class="trigger">
                    <a class="ui small inverted button" href="javascript:" onclick="$('.ui.sidebar').sidebar('toggle');">
                        <i class="sidebar icon"></i>Menu
                    </a>
                </div>
            </div>
        </div>
    </div>
</nav>

@RenderBody()
@Html.Partial(footer)
@Html.Partial(cookieNotice)
@Html.AntiForgeryToken()
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/1.1.1/typed.min.js"></script>
<script src="/Scripts/semantic-ui/components/sidebar.min.js"></script>
<script src="/my/template/scripts/mixerp.js"></script>
</body>
</html>